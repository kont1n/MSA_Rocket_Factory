# ----------------------------
# Настройки gRPC-сервера
# ----------------------------

# Адрес, на котором будет слушать gRPC-сервер
GRPC_HOST=0.0.0.0

# Порт, на котором будет работать gRPC-сервер
GRPC_PORT=50053

# TLS сертификат для gRPC (оставить пустым для режима разработки)
GRPC_TLS_CERT_FILE=

# TLS ключ для gRPC (оставить пустым для режима разработки)
GRPC_TLS_KEY_FILE=

# Использовать небезопасное соединение (только для разработки)
GRPC_INSECURE=true

# ----------------------------
# Настройки логгера
# ----------------------------

# Уровень логирования (debug, info, warn, error)
LOGGER_LEVEL=info

# Выводить логи в формате JSON (true/false)
LOGGER_AS_JSON=true

# ----------------------------
# Настройки PostgreSQL
# ----------------------------

# Хост PostgreSQL-сервера (для внутренних подключений)
POSTGRES_HOST=postgres-iam

# Внутренний порт PostgreSQL
POSTGRES_PORT=5432

# Внешний порт PostgreSQL (для подключения извне контейнера)
EXTERNAL_POSTGRES_PORT=5444

# Имя пользователя для подключения к PostgreSQL
POSTGRES_USER=iam_user

# Пароль пользователя для подключения к PostgreSQL
POSTGRES_PASSWORD=iam_password

# Название базы данных
POSTGRES_DB=iam

# Режим подключения по SSL (например, disable, require)
POSTGRES_SSL_MODE=disable

# Путь к директории с миграциями
MIGRATION_DIRECTORY=migrations

# ----------------------------
# Настройки Redis
# ----------------------------

# Хост Redis-сервера
REDIS_HOST=redis-iam

# Внутренний порт Redis (для использования внутри docker-сети)
REDIS_PORT=6333

# Внешний порт Redis (для подключения извне контейнера)
EXTERNAL_REDIS_PORT=6333

# Таймаут подключения к Redis
REDIS_CONNECTION_TIMEOUT=10s

# Максимальное количество неиспользуемых соединений в пуле
REDIS_MAX_IDLE=10

# Время, через которое неиспользуемое соединение считается устаревшим
REDIS_IDLE_TIMEOUT=240s

# ----------------------------
# Настройки сессий
# ----------------------------

# Время жизни пользовательской сессии
SESSION_TTL=24h

# ----------------------------
# Настройки JWT токенов
# ----------------------------

# Секретный ключ для подписи access токенов
JWT_ACCESS_TOKEN_SECRET=very-long-and-secure-secret-key-for-access-tokens

# Секретный ключ для подписи refresh токенов
JWT_REFRESH_TOKEN_SECRET=very-long-and-secure-secret-key-for-refresh-tokens

# Время жизни access токена в минутах
JWT_ACCESS_TOKEN_TTL=15m

# Время жизни refresh токена в часах
JWT_REFRESH_TOKEN_TTL=24h